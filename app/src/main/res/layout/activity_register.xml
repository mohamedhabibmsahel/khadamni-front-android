<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@drawable/bb">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="250dp">

         <ImageView
             android:id="@+id/imageView_profile_dp"
             android:layout_width="150dp"
             android:layout_height="150dp"
             android:layout_centerInParent="true"
             android:background="@drawable/no_profile_pic" />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/textView_show_welcome"
             android:layout_below="@id/imageView_profile_dp"
             android:hint="Loading..."
             android:layout_centerHorizontal="true"
             android:layout_marginTop="5dp"
             android:textAppearance="@style/TextAppearance.AppCompat.Headline"
             android:textColor="@color/colorWhite"/>
     </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:padding="15dp"
         android:layout_margin="15dp"
         android:background="@color/white">

         <!-- show first name -->
         <ImageView
             android:id="@+id/ic_first_name"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:background="@drawable/ic_profile" />

         <EditText
             android:id="@+id/EditText_show_first_name"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignStart="@id/ic_first_name"
             android:layout_marginStart="50dp"
             android:hint="First name"
             android:textSize="18sp"
             tools:ignore="TouchTargetSizeCheck" />
         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_marginTop="20dp"
             android:layout_below="@+id/EditText_show_first_name"
             android:background="@android:color/darker_gray"
             android:id="@+id/divider_first_name"/>
         <!-- show last name -->


         <ImageView
             android:id="@+id/ic_last_name"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_below="@+id/divider_first_name"
             android:layout_marginTop="20dp"
             android:background="@drawable/ic_profile" />

         <EditText
             android:id="@+id/EditText_show_last_name"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/divider_first_name"
             android:layout_alignStart="@id/ic_last_name"
             android:layout_marginStart="50dp"
             android:layout_marginTop="20dp"
             android:hint="Last name"
             android:textSize="18sp"
             tools:ignore="TouchTargetSizeCheck" />

         <View
             android:id="@+id/divider_last_name"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_below="@+id/EditText_show_last_name"
             android:layout_marginTop="20dp"
             android:background="@android:color/darker_gray" />
         <!-- show email -->

         <ImageView
             android:id="@+id/ic_email"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_below="@+id/divider_last_name"
             android:layout_marginTop="20dp"
             android:background="@drawable/ic_emailblack" />
         <EditText
             android:id="@+id/EditText_show_email"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/divider_last_name"
             android:layout_alignStart="@id/ic_email"
             android:layout_marginStart="50dp"
             android:layout_marginTop="20dp"
             android:hint="Email"
             android:inputType="textEmailAddress"
             android:textSize="18sp"
             tools:ignore="TouchTargetSizeCheck" />
         <View
             android:id="@+id/divider_email"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_marginTop="20dp"
             android:layout_below="@+id/EditText_show_email"
             android:background="@android:color/darker_gray" />
         <!-- show password -->

         <ImageView
             android:id="@+id/ic_password"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_below="@+id/divider_email"
             android:layout_marginTop="20dp"
             android:background="@drawable/ic_pwd_bw" />

         <EditText
             android:id="@+id/EditText_show_password"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/divider_email"
             android:layout_alignStart="@id/ic_email"
             android:layout_marginStart="50dp"
             android:layout_marginTop="20dp"
             android:hint="Password"
             android:textSize="18sp"
             tools:ignore="TouchTargetSizeCheck" />

         <View
             android:id="@+id/divider_password"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_below="@+id/EditText_show_password"
             android:layout_marginTop="20dp"
             android:background="@android:color/darker_gray" />

         <!-- show confirm password -->
         <ImageView
             android:id="@+id/ic_confirmpassword"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_below="@+id/divider_password"
             android:layout_marginTop="20dp"
             android:background="@drawable/ic_pwd_bw" />

         <EditText
             android:id="@+id/EditText_show_confirmpassword"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/divider_password"
             android:layout_alignStart="@id/ic_password"
             android:layout_marginStart="50dp"
             android:layout_marginTop="20dp"
             android:hint="Confirm password"
             android:textSize="18sp"
             tools:ignore="TouchTargetSizeCheck" />

         <View
             android:id="@+id/divider_confirmpassword"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_below="@+id/EditText_show_confirmpassword"
             android:layout_marginTop="20dp"
             android:background="@android:color/darker_gray" />

         <!-- show phone -->
         <ImageView
             android:id="@+id/ic_phone"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_below="@+id/divider_confirmpassword"
             android:layout_marginTop="20dp"
             android:background="@drawable/ic_mobile" />

         <EditText
             android:id="@+id/EditText_show_phone"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:inputType="number"
             android:layout_below="@+id/divider_confirmpassword"
             android:layout_alignStart="@id/ic_password"
             android:layout_marginStart="50dp"
             android:layout_marginTop="20dp"
             android:hint="Phone number"
             android:textSize="18sp" />
         <View
             android:id="@+id/divider_phone"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_marginTop="20dp"
             android:layout_below="@+id/EditText_show_phone"
             android:background="@android:color/darker_gray"
             />
         <!-- show address-->
         <ImageView
             android:id="@+id/ic_address"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_below="@+id/divider_phone"
             android:layout_marginTop="20dp"
             android:background="@drawable/ic_address" />

         <EditText
             android:id="@+id/EditText_show_address"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/divider_phone"
             android:layout_alignStart="@id/ic_password"
             android:layout_marginStart="50dp"
             android:layout_marginTop="20dp"
             android:hint="Address"
             android:textSize="18sp" />
         <View
             android:id="@+id/divider_address"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_marginTop="20dp"
             android:layout_below="@+id/EditText_show_address"
             android:background="@android:color/darker_gray"
             />
         <!-- show job-->
         <ImageView
             android:id="@+id/ic_job"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_below="@+id/divider_address"
             android:layout_marginTop="20dp"
             android:background="@drawable/ic_build" />

         <EditText
             android:id="@+id/EditText_show_job"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/divider_address"
             android:layout_alignStart="@id/ic_password"
             android:layout_marginStart="50dp"
             android:layout_marginTop="20dp"
             android:hint="Job"
             android:textSize="18sp" />
         <View
             android:id="@+id/divider_job"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_marginTop="20dp"
             android:layout_below="@+id/EditText_show_job"
             android:background="@android:color/darker_gray"
             />
     </RelativeLayout>
     <Button
         android:textColor="@color/white"
         android:id="@+id/btnregister"
         android:layout_margin="20dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:background="@color/purple_500"
         android:text="Register" />

     <TextView
         android:id="@+id/alreadyHaveAccount"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginBottom="30dp"
         android:textAlignment="center"
         android:shadowColor="@color/colorWhite"
         android:text="Already Have an Account?"
         android:textColor="@color/colorWhite" />
 </LinearLayout>

</ScrollView>